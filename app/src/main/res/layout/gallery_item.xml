<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_photo_list_gallery_image_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/betty_up_close" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/fragment_photo_list_gallery_text_rating"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@string/just_rating" />

        <TextView
            android:id="@+id/fragment_photo_list_gallery_text_age"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@string/just_status" />

        <TextView
            android:id="@+id/fragment_photo_list_gallery_text_status"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/fragment_photo_list_gallery_text_rating"
            android:src="@string/just_status" />

        <TextView
            android:id="@+id/fragment_photo_list_gallery_text_distance"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/fragment_photo_list_gallery_text_rating"
            android:layout_alignParentRight="true"
            android:src="@string/just_status" />

    </RelativeLayout>

</LinearLayout>
